generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  uid         String     @id
  email       String     @unique
  name        String
  image       String
  householdId String?
  household   Household? @relation(fields: [householdId], references: [id])
}

model Household {
  id            String        @id @default(uuid())
  name          String
  inviteCode    String?       @unique
  users         User[]
  categories    Category[]
  subcategories Subcategory[]
  transactions  Transaction[]
  reminders     Reminder[]
}

model Category {
  id            String        @id @default(uuid())
  name          String
  color         ColorEnum
  isIncome      Boolean       @default(false)
  isSavings     Boolean       @default(false)
  isFixed       Boolean       @default(false)
  order         Int           @default(0)
  householdId   String
  household     Household     @relation(fields: [householdId], references: [id])
  subcategories Subcategory[]
  @@unique([name, householdId])
}

model Subcategory {
  id               String            @id @default(uuid())
  name             String
  amount           Float?            @default(0)
  month            Int
  year             Int
  categoryId       String
  category         Category          @relation(fields: [categoryId], references: [id])
  householdId      String
  household        Household         @relation(fields: [householdId], references: [id])
  transactions     Transaction[]
  transactionRules TransactionRule[]
  @@unique([name, month, year, householdId, categoryId], name: "subcategory_unique_auth")
}

model Transaction {
  id            String       @id @default(uuid())
  description   String
  amount        Float
  date          DateTime
  source        String
  householdId   String
  household     Household    @relation(fields: [householdId], references: [id])
  subcategoryId String?
  subcategory   Subcategory? @relation(fields: [subcategoryId], references: [id])
  createdAt DateTime @default(now())
}

model Reminder {
  id           String    @id @default(uuid())
  text         String
  targetUserId String    // Who should do it (the assigned user's UID)
  creatorId    String    // Who wrote it
  isDone       Boolean   @default(false)
  householdId  String
  household    Household @relation(fields: [householdId], references: [id])
  createdAt    DateTime  @default(now())
}

model TransactionRule {
  id            String      @id @default(uuid()) // Must have @id and @default
  pattern       String
  subcategoryId String
  householdId   String
  subcategory   Subcategory @relation(fields: [subcategoryId], references: [id], onDelete: Cascade)
  @@unique([pattern, householdId])
}

enum ColorEnum {
  BLUE
  GREEN
  RED
  YELLOW
  PURPLE
  ORANGE
  PINK
  TEAL
  GRAY
  BROWN
  BLACK
}
