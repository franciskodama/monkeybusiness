generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  uid          String        @id @default(uuid()) @db.VarChar(255)
  name         String?
  email        String        @unique
  image        String?
  householdId  String?       @default("MONKEY_HOUSEHOLD_1") 
  createdAt    DateTime      @default(now()) @db.Timestamp(6)
  categories   Category[]
  budgetItems  BudgetItem[]
  transactions Transaction[]
}

model Category {
  id          String       @id @default(uuid())
  name        String       
  color       ColorEnum    @default(GRAY)
  householdId String
  user        User         @relation(fields: [householdId], references: [uid]) 
  budgetItems BudgetItem[]
  @@unique([name, householdId]) 
}
// In the schema above, I kept the @relation pointing to User.uid for now to avoid creating a new Household table yet. It's a "pseudo-household" setup that works perfectly for your MVP.

enum ColorEnum {
  BLUE
  GREEN
  RED
  YELLOW
  PURPLE
  ORANGE
  PINK
  TEAL
  GRAY
  BROWN
  BLACK
}

model BudgetItem {
  id          String        @id @default(uuid())
  name        String        
  amount      Float?         
  month       Int?           
  year        Int?
  householdId String       
  categoryId  String
  
  user         User          @relation(fields: [householdId], references: [uid])
  category     Category      @relation(fields: [categoryId], references: [id])
  transactions Transaction[] 

  @@unique([name, month, year, householdId])
}

model Transaction {
  id            String      @id @default(uuid())
  description   String      
  amount        Float
  date          DateTime
  source        String      
  householdId   String      
  
  budgetItemId  String?     
  user          User        @relation(fields: [householdId], references: [uid])
  budgetItem    BudgetItem? @relation(fields: [budgetItemId], references: [id])
}