generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  uid         String     @id
  email       String     @unique
  name        String
  image       String
  householdId String?
  household   Household? @relation(fields: [householdId], references: [id])
}

model Household {
  id            String        @id @default(uuid())
  name          String
  users         User[]
  categories    Category[]
  subcategories Subcategory[]
  transactions  Transaction[]
}

model Category {
  id            String        @id @default(uuid())
  name          String
  color         ColorEnum
  householdId   String
  household     Household     @relation(fields: [householdId], references: [id])
  subcategories Subcategory[]
}

model Subcategory {
  id               String            @id @default(uuid())
  name             String
  amount           Float?            @default(0)
  month            Int
  year             Int
  categoryId       String
  category         Category          @relation(fields: [categoryId], references: [id])
  householdId      String
  household        Household         @relation(fields: [householdId], references: [id])
  transactions     Transaction[]
  transactionRules TransactionRule[]

  @@unique([name, month, year, householdId])
}

model Transaction {
  id            String       @id @default(uuid())
  description   String
  amount        Float
  date          DateTime
  categoryName  String?
  source        String
  householdId   String
  household     Household    @relation(fields: [householdId], references: [id])
  // Optional: Link to a specific budget goal
  subcategoryId String?
  subcategory   Subcategory? @relation(fields: [subcategoryId], references: [id])

  createdAt DateTime @default(now())
}

model TransactionRule {
  id            String      @id @default(cuid())
  pattern       String // e.g., "IC INSTACART"
  subcategoryId String
  householdId   String
  subcategory   Subcategory @relation(fields: [subcategoryId], references: [id], onDelete: Cascade)

  @@unique([pattern, householdId]) // Prevents duplicate rules for the same string
}

enum ColorEnum {
  BLUE
  GREEN
  RED
  YELLOW
  PURPLE
  ORANGE
  PINK
  TEAL
  GRAY
  BROWN
  BLACK
}
