generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  uid         String     @id
  email       String     @unique
  name        String?
  image       String?
  householdId String?    // Foreign key to Household
  household   Household? @relation(fields: [householdId], references: [id])
}
model Household {
  id           String        @id @default(uuid())
  name         String
  users        User[]
  categories   Category[]
  budgetItems  BudgetItem[]
  transactions Transaction[] // Add this line
}

model Category {
  id           String        @id @default(uuid())
  name         String
  color        ColorEnum
  householdId  String
  household    Household     @relation(fields: [householdId], references: [id])
  budgetItems  BudgetItem[]
}

model BudgetItem {
  id           String    @id @default(uuid())
  name         String
  amount       Float?    @default(0)
  month        Int
  year         Int
  
  categoryId   String
  category     Category  @relation(fields: [categoryId], references: [id])
  
  householdId  String
  household    Household @relation(fields: [householdId], references: [id])

  transactions Transaction[] // Add this line
  
  @@unique([name, month, year, householdId])
}

model Transaction {
  id           String      @id @default(uuid())
  description  String      // e.g., "Amazon.com"
  amount       Float       // e.g., 45.99
  date         DateTime
  categoryName String?     // Raw category from the bank
  source       String     // Raw category from the bank
  
  // Relationships
  householdId  String
  household    Household   @relation(fields: [householdId], references: [id])

  // Optional: Link to a specific budget goal
  budgetItemId String?
  budgetItem   BudgetItem? @relation(fields: [budgetItemId], references: [id])

  createdAt    DateTime    @default(now())
}

enum ColorEnum {
  BLUE
  GREEN
  RED
  YELLOW
  PURPLE
  ORANGE
  PINK
  TEAL
  GRAY
  BROWN
  BLACK
}